<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>
      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= fields_for :recruiter, @job.recruiter do |recruiter| %>
    <div class="field">
      <%= recruiter.label :name, "Recruiter" %>
      <%= recruiter.text_field :name %>
    </div>
    <div class="field">
      <%= recruiter.label :contact, "Contact" %>
      <%= recruiter.text_field :contact %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :time %>
    <%= form.datetime_select :time, id: :job_time %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :job_quantity %>
  </div>

  <div class="field">
    <%= form.label :worker_num %>
    <%= form.text_field :worker_num, id: :job_worker_num %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :job_price %>
  </div>

  <div class="field">
    <%= form.label :content_type, "工作内容" %>
    <%= form.collection_select(:content_type, Job.content_types, :last, :first) %>
  </div>

  <div class="field">
    <%= form.label :diving_num %>
    <%= form.number_field :diving_num, id: :job_diving_num %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration, id: :job_duration %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note, id: :job_note %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
