<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Freelancer</th>
      <th>Job</th>
      <th>Take quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.freelancer_id %></td>
        <td><%= ticket.job_id %></td>
        <td><%= ticket.take_quantity %></td>
        <td><%= link_to 'Show', job_ticket_path(@job,ticket) %></td>
        <td><%= link_to 'Edit', edit_job_ticket_path(@job,ticket) %></td>
        <td><%= link_to 'Destroy', job_ticket_path(@job,ticket), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_job_ticket_path %>
